<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/prospectosAvatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/icon_avatar"
        android:layout_marginEnd="8dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/prospectosNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jose Montes Arce"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/prospectosStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rechazado"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/prospectosActualizar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:background="#FFFFFF"/>

    <ImageButton
        android:id="@+id/prospectosInformacion"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:srcCompat="@android:drawable/ic_menu_search"
        android:background="#FFFFFF"/>

</LinearLayout>